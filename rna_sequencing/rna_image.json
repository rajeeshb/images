{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-east-1",
        "source_ami": "ami-2ef48339",
        "instance_type": "m4.2xlarge",
        "vpc_id": "vpc-0236ab67",
        "subnet_id": "subnet-3d9ffa07",
        "ssh_username": "ubuntu",
        "ami_name": "rna-seq {{timestamp}}",
        "ami_block_device_mappings": [{
            "device_name": "/dev/sda1",
            "volume_size": 300,
            "volume_type": "gp2",
            "delete_on_termination": true
        }],
        "launch_block_device_mappings": [{
            "device_name": "/dev/sda1",
            "volume_size": 300,
            "volume_type": "gp2",
            "delete_on_termination": true
        }]
    }],
    "provisioners": [{
        "type": "file",
        "source": "pipeline-star-0.2.15.tar",
        "destination": "/tmp/pipeline-star-0.2.15.tar"
    },
    {
        "type": "file",
        "source": "docker.htseq.v2.9.tar",
        "destination": "/tmp/docker.htseq.v2.9.tar"
    },
    {
        "type": "shell",
        "script": "provisioning.sh"
    }]
}
