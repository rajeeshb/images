{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-fce3c696",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "base-image-ks {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update",
        "sudo apt-get install -y fail2ban "
      ]
    },
    {
      "type": "file",
      "source": "sshd_config",
      "destination": "/tmp/sshd_config"
    },
    {
      "type": "file",
      "source": "krlfile",
      "destination": "/tmp/krlfile"
    },
    {
      "type": "file",
      "source": "authorized_keys",
      "destination": "/tmp/authorized_keys"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /tmp/sshd_config /etc/ssh/sshd_config",
        "sudo mkdir -p /usr/local/etc/ssh/krlfile",
        "sudo mv /tmp/krlfile /usr/local/etc/ssh/krlfile",
        "sudo mkdir -p /root/.ssh/",
        "sudo mv /tmp/authorized_keys /root/.ssh/authorized_keys",
        "sudo chown root:root /etc/ssh/sshd_config",
        "sudo chmod 0644 /etc/ssh/sshd_config",
        "sudo chown root:root /usr/local/etc/ssh/krlfile",
        "sudo chmod 0600 /usr/local/etc/ssh/krlfile",
        "sudo chown root:root /root/.ssh/authorized_keys",
        "sudo chmod 0600 /root/.ssh/authorized_keys"
      ]
    }
  ]
}
